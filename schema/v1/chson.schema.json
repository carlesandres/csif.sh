{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://chson.dev/schema/v1/chson.schema.json",
  "title": "ChSON Cheatsheet",
  "type": "object",
  "additionalProperties": true,
  "required": ["title", "publicationDate", "description", "sections"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "publicationDate": {
      "type": "string",
      "anyOf": [
        { "format": "date" },
        { "format": "date-time" }
      ]
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/section" }
    }
  },
  "$defs": {
    "section": {
      "type": "object",
      "additionalProperties": true,
      "required": ["title", "items"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "items": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/item" }
        }
      }
    },
    "item": {
      "type": "object",
      "additionalProperties": true,
      "required": ["title", "description"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "comments": {}
      }
    }
  }
}
